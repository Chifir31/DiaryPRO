<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".navigation_pages.ProfileFragment"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray"
        app:titleTextColor="@color/white">
        <TextView
            android:id="@+id/profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Профиль"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/profile_textview"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/circle_image"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/toolbar"
        android:layout_gravity="left"
        android:layout_marginTop="30sp"
        android:layout_marginStart="30sp"
        android:background="@drawable/circular_background"
        ></ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/circle_image"
        android:layout_marginStart="50sp"
        android:layout_marginTop="30sp"
        android:layout_below="@id/toolbar">
        <TextView
            android:id="@+id/profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:blablabla"
            android:textSize="25sp"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_below="@id/profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a@gmail.com"
            android:textSize="25sp"
            android:textColor="@color/gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_below="@id/circle_image"
        android:background="@color/white">
        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Профиль"
            android:textSize="25sp"
            android:background="@color/black"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/profile_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фамилия:"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:layout_below="@id/profile_text"
            />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя:"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:layout_below="@id/profile_lastname"/>
        <TextView
            android:id="@+id/profile_datebirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата рождения:"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:layout_below="@id/profile_name"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snake, are you alive out there?\n Snake?\n SNAKEEEEEE!"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="@color/gray"/>


</RelativeLayout>