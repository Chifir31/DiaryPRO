<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="#008000"
        android:layout_marginTop="70sp"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:layout_marginBottom="2sp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="30sp"
        android:textColorHint="@color/gray"
        android:hint="Фамилия"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:counterTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:backgroundTint="@color/black"
            android:maxLength="25"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastname"
        android:layout_marginHorizontal="30sp"
        android:textColorHint="@color/gray"
        android:hint="Имя"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        app:counterTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/black"
            android:maxLength="25"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:id="@+id/role2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname"
        android:text="Спортсмен"
        android:textColor="@color/gray"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80sp"
        android:onClick="onCheckboxClicked"
        />
    <CheckBox
        android:id="@+id/role1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname"
        android:text="Тренер"
        android:textColor="@color/gray"
        android:layout_toLeftOf="@id/role2"
        android:layout_marginEnd="90sp"
        android:layout_alignParentEnd="false"
        android:onClick="onCheckboxClicked"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/role1"
        android:layout_marginHorizontal="30sp"
        android:hint="Дата рождения"
        android:textColorHint="@color/gray">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginHorizontal="30sp"
        android:textColorHint="@color/gray"
        android:hint="Логин"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="20sp"

            android:backgroundTint="@color/black"
            android:textColorHint="#616667"
            android:maxLength="25"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginHorizontal="30sp"
        android:textColorHint="@color/gray"
        android:hint="Пароль"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/Pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/black"
            android:textColorHint="#616667"
            android:maxLength="25"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd"
        android:layout_marginHorizontal="30sp"
        android:textColorHint="@color/gray"
        android:hint="Повторите пароль"
        app:counterEnabled="true"
        app:counterMaxLength="25"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/RepeatPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/black"
            android:maxLength="25"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/RegisterCompleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r_pwd"
        android:text="Зарегистрироваться"
        android:layout_marginHorizontal="30sp"
        android:backgroundTint="#008000"
        />
</RelativeLayout>