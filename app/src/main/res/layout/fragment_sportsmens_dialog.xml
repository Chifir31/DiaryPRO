<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/sportsmensfragmentdialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/dark_gray"
            android:elevation="4dp"
            android:titleTextColor="@color/gray"
            android:subtitleTextColor="@color/gray"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/toolbar_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:text="Дневник тренировок"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/calendarLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id = "@+id/prevWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_arrow_left_24"
                    android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_week"
                android:text="Текущая неделя"
                android:gravity="center"
                android:layout_weight="2"
                android:textColor="@color/teal_200"
                android:textSize="20sp"
                android:paddingVertical="10dp"
                />

                <ImageButton
                    android:id = "@+id/nextWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_arrow_right_24"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/CalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                tools:listitem="@layout/calendar_cell" />
        </LinearLayout>

        <TextView
            android:id = "@+id/full_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Месяц д1-д1, год"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:gravity="center"
            android:paddingVertical="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_sportsmens_dialog"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:paddingVertical="25dp"
            android:text="Добавить тренировку"
            android:textSize="20sp"
            android:textColor="@color/red" />
    </LinearLayout>
</RelativeLayout>